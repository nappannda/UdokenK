<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.TopFragment"
    android:background="@drawable/top_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_awase_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/top_awase_custom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <ImageView
                android:id="@+id/top_siru_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/top_siru_custom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <ImageView
                android:id="@+id/top_mitibiki_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/top_mitibiki_custom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <ImageView
                android:id="@+id/top_moyori_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/top_moyori_custom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/top_setting_image"
            android:adjustViewBounds="false"
            android:src="@drawable/top_setting_image"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_udonmaru_image"
            android:src="@drawable/top_tukimi_maru"
            android:layout_marginBottom="15dp" />

    </LinearLayout>
</LinearLayout>
